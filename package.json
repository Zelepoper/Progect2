{
  "name": "project",
  "private": true,
  "description": "Личный проект «project» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^3.0.0",
    "autoprefixer": "10.2.5",
    "browser-sync": "^2.29.3",
    "gulp": "^5.0.1",
    "gulp-less": "^5.0.0",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "postcss": "8.2.8",
    "stylelint": "^16.25.0",
    "stylelint-config-htmlacademy": "^4.2.3"
  },
  "overrides": {
    "es5-ext": "0.10.53"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/less/**/*.less\" --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp styles",
    "start": "gulp"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "^12 || ^14"
  }
}
